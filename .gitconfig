[core]
  	editor = code --wait
	longpaths = true
	autocrlf = false
[user]
	name = Vadym Repetskyi
	email = vadym.repetskyi@gmail.com
[includeIf "gitdir/i:~/repos/lambda/"]
	path = .gitconfig-lambda
[diff]
  	tool = vscode
[difftool "vscode"]
  	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
  	tool = vscode
[mergetool "vscode"]
  	cmd = code --wait $MERGED
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main